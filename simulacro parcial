 public static boolean paridad (int n){
        //
        boolean res;
        res = true;
        if ((n%2) == 0){
            res = true;
        }else{res = false;}
        return res;
        
        
        
    }
    public static void main (String [] args){
        //
        int num,acum,cant,cantp,sucesor;
        char respuesta;
        acum = 0;
        cant = 0;
        cantp = 0;
        sucesor = 0;
        
        do{
            System.out.println("ingrese un numero");
            num = TecladoIn.readLineInt();
            if (paridad(num)){
                System.out.println("es un numero par");
                acum = acum +1;
                sucesor = sucesor + (num+1);
                
            }else{
                System.out.println("es un numero impar");
                cant = cant +1;
                
            }
            cantp = cantp +1;
            System.out.println("Â¿desea ingresar otro numero ? s/n");
            respuesta = TecladoIn.readLineNonwhiteChar();
            
            
        }while (respuesta != 'n');
        System.out.println("la cantidad de numeros pares es " +acum);
        System.out.println ("la cantidad de numeros imapares es "+cant);
        System.out.println("la sumatoria de los numeros sucesores de  pares es " +sucesor);
        System.out.println("la cantidad de numeros procesados es "+cantp);
    }
